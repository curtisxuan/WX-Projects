.userInfo {
  padding: 27rpx 15rpx;
}
.userInfo .u-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  float:left;
  margin-left: 10rpx;
}
.userInfo .u-nickname {
  font-size: 35rpx;
  margin-left: 10rpx;
  font-weight: 500;
  color: #3F51B5;
  text-decoration: underline;
}
.u-published {
  font-size: 25rpx;
  color: #555;
  float: right;
  margin-right: 20rpx;
}
.userInfo .u-school{
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  font-size: 30rpx;
}
.userInfo .u-school image {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
}

.itemInfo {
  margin-left: 15rpx;
  margin-top: 5rpx;
}
.itemInfo .u-name image,.itemInfo .u-telephone image,.itemInfo .u-email image,.itemInfo .u-section image   {
  width: 35rpx;
  height: 35rpx;
  float: left;
  margin-right: 15rpx;
}
.itemInfo .u-email,.itemInfo .u-section   {
  font-size: 25rpx;
  width:66%;
  padding:10rpx 5rpx;
  float:left;
  background:#EDECE8;
  border-radius:10rpx;
  margin-right:10rpx;
  margin-bottom:10rpx;
}
.itemInfo .u-name,.itemInfo .u-telephone{
  font-size: 25rpx;
  width:28%;
  padding:10rpx 5rpx;
  float:left;
  background:#EDECE8;
  border-radius:10rpx;
  margin-right:10rpx;
  margin-bottom:10rpx;
}

.detailInfo {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 150rpx;
}
.detailInfo text {
    display: block;
    color: #3F51B5;
    font-size: 30.5rpx;
}
.detailInfo view {
  margin-bottom: 15rpx;
  color: #666;
  font-size: 28rpx;
}
.likeButton {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #656565;
  margin-left: 10rpx;
  display: inline-block;
}
.likeButton image {
  width: 50rpx;
  height: 50rpx;
}

.keepButton {
  height: 47rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #656565;
  margin-left: 30rpx;
  padding-top: 5rpx;
  display: inline-block;
}
.keepButton image {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
}


.comment {
  position: fixed;
  bottom: 0;
  background: #EDECE8;
  width: 100%;
  height: 80rpx;
}
.comment input {
  float: left;
  background: #fff;
  height: 60rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  width: 500rpx;
}
.comment text {
    background: #3F51B5;
    border-radius: 20rpx;
    color: #fff;
    float: left;
    font-size: 30rpx;
    height: 50rpx;
    margin-top: 15rpx;
    line-height: 50rpx;
    width: 100rpx;
    text-align: center;
    margin-left: 50rpx;
  }

.commList {
  padding: 20rpx 50rpx 0rpx 50rpx;
}

.commList image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  float: left;
}

.commList .commName{
  font-size: 28rpx;
  margin-left: 60rpx;
  color: #385AA1;
}

.commList .commComm{
  font-size: 28rpx;
  margin-left: 60rpx;
}

.commList .commPub{
  font-size: 20rpx;
  text-align: right;
  margin-bottom: 40rpx;

}

.whole{
  padding-bottom: 80rpx;
}

.hide{display:none}
.show{display:block}