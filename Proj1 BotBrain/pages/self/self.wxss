page {
  background: #EDECE8;
}
.userInfo {
    overflow: hidden;
    padding: 30rpx 30rpx;

    color: #FFF;
    background: #3F51B5;

    _height: 1%;
}
.userInfo .info-item {
    float: left;
}
.userInfo .info-item  image {
    display: block;
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.info-tags {
    font-size: 28rpx;

    padding-left: 155rpx;
}
.info-tags image {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 10rpx;
}


.jobImage{
  position: absolute;
  top: 70rpx;
  right:30rpx;
}
.busImage{
  position: absolute;
  top: 130rpx;
  right:30rpx;
}

