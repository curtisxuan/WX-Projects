.info-tags text {
    margin-top: 12.5rpx;
    margin-left: 15rpx;
    padding: 5rpx 15rpx;
    color: #333;
    border-radius: 5rpx;
    background: #FFF;
    font-size: 25rpx;
}
.job-tags{
  margin-bottom:5rpx;
  margin-top:5rpx;

}
.job-tags text:first-child, .bus-tags text:first-child {
    margin-left: 0;
    color: #FFF;
    background: none;
}

.nickName text {
    font-size: 32.5rpx;
    font-weight: 600;
    display: block;
    width: 60%;
    margin-top: 0;
    margin-left: 0;

    color: #FFF;
    background: none;
}
.buttonList {
  background: #fff;
  padding: 30rpx 0;
}
.buttonList view {
  display: inline-block;
  text-align: center;
  width: 250rpx;
}
.buttonList image {
  width: 39rpx;
  height: 39rpx;
  display: block;
  margin: 0 auto;
}
.buttonList text {
  font-size: 28rpx;
  display: block;
  margin-top: 15rpx;
}
.typeList {
  margin-top: 35rpx;
  background: #fff;
  padding:20rpx 0;
}
.typeList image {
  width: 35rpx;
  height: 35rpx;
  float: right;
  padding-right: 150rpx;
}
.typeList navigator {
  font-size: 30rpx;
  padding: 20rpx 0;
  padding-left: 150rpx;
}
.opa {
  background: #000;
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.7;
}
.inputArea {
  position: fixed;
  width: 500rpx;
  height: 200rpx;
  background: #fff;
  z-index: 2;
  top: 50%;
  left: 50%;
  margin-top: -100rpx;
  margin-left: -250rpx;
}
.dn {
  display: none;
}
.db {
  display: block;
}
.inputArea text {
  font-weight: 600;
  color: red;
}
.whole{
  height:100%;
  width:100%;
  z-index:2;
}
.show{
  display:inherit;
}
.hide{
  display:none;
}